<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Logout"
        android:text="Logout" />

    <EditText
        android:id="@+id/groupname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter group name"
        android:inputType="textPersonName"
        android:text=""
        tools:visibility="visible" />

    <Button
        android:id="@+id/search_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Search_Group"
        android:text="Search group" />

    <TextView
        android:id="@+id/display_group"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text=""
         />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:onClick="Create_Group"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group 1 Name:" />

    <EditText
        android:id="@+id/group1view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text=""
        android:clickable="true"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group 2 Name:" />

    <EditText
        android:id="@+id/group2view"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text=""
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group 3 Name:" />

    <EditText
        android:id="@+id/group3view"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text=""
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group 4 Name:" />

    <EditText
        android:id="@+id/group4view"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text=""
        android:clickable="true"
        android:focusable="false"
        />

    <Button
        android:id="@+id/editgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Edit_Groups"
        android:text="Edit Groups" />


</LinearLayout>